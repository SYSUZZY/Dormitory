                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1" Background="#FF2B3B65" Margin="0, 20, 20, 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border BorderThickness="0, 0, 0, 1" BorderBrush="#F2F6FB" Grid.Column="0">
